<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewListItemChatRightMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘은 좀 꿀꿀해.\n이런 날엔 어떤 칵테일을 먹으면 좋을까?"
        style="@style/Font_Medium_16_Basic_White"
        android:background="@drawable/chat_bubble_right"
        android:maxWidth="220dp"
        android:breakStrategy="simple"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewListItemChatRightTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 08:14"
        style="@style/Font_Medium_12_Basic_Gray"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewListItemChatRightMessage"
        app:layout_constraintBottom_toBottomOf="@+id/textViewListItemChatRightMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>