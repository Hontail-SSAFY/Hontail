<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewListItemCocktailListCocktailItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutListItemCocktailItemButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewListItemCocktailListCocktailItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageViewListItemCocktailListCocktailPagePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/go_back"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textViewListItemCocktailListCocktailPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            style="@style/Font_SemiBold_20_Basic_White"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageViewListItemCocktailListCocktailPageNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/go"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>