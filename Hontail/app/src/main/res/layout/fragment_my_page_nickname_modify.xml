<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarMyPageNicknameModify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewMyPageNicknameModifyToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="닉네임 변경"
            style="@style/Font_Bold_22_Basic_White" />
    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/textViewMyPageNicknameModifyNicknameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="닉네임"
        style="@style/Font_SemiBold_20_Basic_White"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMyPageNicknameModify"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextMyPageModifyNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hyuun"
        style="@style/Font_Medium_16_Basic_White"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMyPageNicknameModifyNicknameTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewMyPageNicknameModifyNicknameTitle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMyPageNicknameModifyCheck"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="확인"
        style="@style/Font_Medium_16_Basic_White"
        android:background="@drawable/button_mypage_outline"
        app:layout_constraintTop_toTopOf="@+id/editTextMyPageModifyNickname"
        app:layout_constraintBottom_toBottomOf="@+id/editTextMyPageModifyNickname"
        app:layout_constraintEnd_toEndOf="@+id/textViewMyPageNicknameModifyNicknameTitle"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerMyPageNicknameModify1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:dividerColor="@color/basic_gray"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextMyPageModifyNickname"
        app:layout_constraintStart_toStartOf="@+id/textViewMyPageNicknameModifyNicknameTitle"
        app:layout_constraintEnd_toEndOf="@+id/textViewMyPageNicknameModifyNicknameTitle" />

    <TextView
        android:id="@+id/textViewMyPageNicknameModifyResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asd"
        style="@style/Font_Medium_16_Basic_Pink"
        android:visibility="invisible"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/dividerMyPageNicknameModify1"
        app:layout_constraintStart_toStartOf="@+id/dividerMyPageNicknameModify1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMyPageNicknameModifyChange"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="변경"
        style="@style/Font_SemiBold_16_Basic_White"
        android:background="@drawable/button_mypage"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>