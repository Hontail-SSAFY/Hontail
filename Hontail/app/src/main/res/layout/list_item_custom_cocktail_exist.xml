<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutListItemCustomCocktailExist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_custom_cocktail_ingredient_bg"
        android:layout_weight="9"
        android:layout_gravity="center"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewListItemCustomCocktailExistIngredient"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/logo_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewListItemCustomCocktailExistIngredientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오렌지"
            style="@style/Font_SemiBold_16_Basic_White"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewListItemCustomCocktailExistIngredient"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewListItemCustomCocktailExistIngredient"
            app:layout_constraintStart_toEndOf="@+id/imageViewListItemCustomCocktailExistIngredient" />

        <TextView
            android:id="@+id/textViewListItemCustomCocktailExistIngredientQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/2 개"
            style="@style/Font_SemiBold_16_Basic_White"
            app:layout_constraintTop_toTopOf="@+id/imageViewListItemCustomCocktailExistIngredient"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewListItemCustomCocktailExistIngredient"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageViewListItemCustomCocktailExistDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:layout_weight="1"
        android:layout_gravity="center"/>

</LinearLayout>