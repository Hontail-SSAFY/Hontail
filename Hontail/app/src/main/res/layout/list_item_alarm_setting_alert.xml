<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginTop="32dp"
    android:backgroundTint="@color/basic_gray"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardViewPushContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/basic_purple">

        <TextView
            android:id="@+id/textViewAlarmAlert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="기기 알림을 켜주세요"
            android:textSize="16sp"
            android:fontFamily="@font/suit_bold"
            android:textColor="@color/basic_pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewAlarmAlert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:text="소식을 앱 푸시로 받아보세요"
            android:textSize="16sp"
            android:fontFamily="@font/suit_medium"
            android:textColor="@color/basic_pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonViewAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="알림 켜기"
            android:textSize="16sp"
            android:fontFamily="@font/suit_semibold"
            android:textColor="@color/basic_white"
            android:backgroundTint="@color/basic_pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>