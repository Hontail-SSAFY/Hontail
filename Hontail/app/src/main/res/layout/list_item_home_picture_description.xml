<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/textViewHomePictureSmall"
        style="@style/Font_Medium_14_Basic_White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="내 냉장고 속 재료로 완성되는 칵테일 한 잔!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHomePictureBig"
        style="@style/Font_Medium_22_Basic_White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="지금 당신을 위한\n완벽한 레시피를\n추천해드릴게요!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHomePictureSmall" />

    <ImageView
        android:id="@+id/imageViewHomeRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/right_arrow"
        app:layout_constraintEnd_toStartOf="@+id/imageViewHomePicture"
        app:layout_constraintStart_toEndOf="@+id/textViewHomePictureBig"
        app:layout_constraintTop_toBottomOf="@+id/textViewHomePictureSmall" />

    <ImageView
        android:id="@+id/imageViewHomePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/camera_home_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHomePictureSmall" />


</androidx.constraintlayout.widget.ConstraintLayout>