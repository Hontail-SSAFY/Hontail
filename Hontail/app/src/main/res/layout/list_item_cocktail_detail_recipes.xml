<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewCocktailDetailRecipeTitle"
        style="@style/Font_Bold_22_Basic_White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레시피"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCocktailDetailRecipeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@drawable/recipe_mode"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCocktailDetailRecipeTitle"
        app:layout_constraintStart_toEndOf="@+id/textViewCocktailDetailRecipeTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewCocktailDetailRecipeTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCocktailDetailRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCocktailDetailRecipeTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>