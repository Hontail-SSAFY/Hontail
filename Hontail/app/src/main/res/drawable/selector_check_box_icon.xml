<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 비활성화 상태에서 아이콘 색상 -->
    <item android:color="@color/basic_gray" android:state_enabled="false"/>
    <!-- 에러 상태에서 아이콘 색상 -->
    <item android:color="@color/basic_gray" app:state_error="true"/>
    <!-- 중간 상태에서 아이콘 색상 -->
    <item android:color="@color/basic_pink" app:state_indeterminate="true"/>
    <!-- 체크된 상태에서 아이콘 색상 -->
    <item android:color="@color/basic_pink" android:state_checked="true"/>
</selector>